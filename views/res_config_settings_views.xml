<odoo>
    <data>
        <record id="view_social_hub_meta_config_list" model="ir.ui.view">
            <field name="name">social.hub.meta.config.list</field>
            <field name="model">social.hub.meta.config</field>
            <field name="arch" type="xml">
                <list string="Meta API Configurations">
                    <field name="name"/>
                    <field name="company_id"/>
                    <field name="meta_app_id"/>
                    <field name="meta_graph_version"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <record id="view_social_hub_meta_config_form" model="ir.ui.view">
            <field name="name">social.hub.meta.config.form</field>
            <field name="model">social.hub.meta.config</field>
            <field name="arch" type="xml">
                <form string="Meta API Configuration">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="meta_app_id"/>
                                <field name="meta_app_secret" password="True"/>
                                <field name="meta_graph_version"/>
                            </group>
                        </group>
                        <group>
                            <field name="meta_scopes"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_social_hub_settings" model="ir.actions.act_window">
            <field name="name">Meta API Settings</field>
            <field name="res_model">social.hub.meta.config</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="menu_social_hub_settings" name="Settings" parent="menu_social_hub_config" sequence="99" action="action_social_hub_settings" groups="social_hub.group_social_hub_manager"/>
    </data>
</odoo>
