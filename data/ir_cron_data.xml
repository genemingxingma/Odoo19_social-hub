<odoo>
    <data noupdate="1">
        <record id="ir_cron_social_hub_publish_queue" model="ir.cron">
            <field name="name">Social Hub: Process Publish Queue</field>
            <field name="model_id" ref="model_social_hub_post"/>
            <field name="state">code</field>
            <field name="code">model.cron_process_publish_queue()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="active">True</field>
        </record>

        <record id="ir_cron_social_hub_refresh_meta_tokens" model="ir.cron">
            <field name="name">Social Hub: Refresh Meta Tokens</field>
            <field name="model_id" ref="model_social_hub_account"/>
            <field name="state">code</field>
            <field name="code">model.cron_refresh_meta_tokens()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">12</field>
            <field name="interval_type">hours</field>
            <field name="active">True</field>
        </record>
    </data>
</odoo>
